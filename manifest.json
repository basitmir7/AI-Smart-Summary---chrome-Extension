{
    "manifest_version": 3,
    "name": "Smart Summary",
    "version": "1.0",
    "description": "Summarize articles and web pages using AI.",
    "permissions": ["scripting", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon8.png",
        "48": "icon8.png",
        "128": "icon8.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "128": "icon8.png"
    }
  }
  